@using Prototyping.Ipsum
@using Prototyping.Placeholdit
<div id="showcase">
    <div class="row">
        <div class="large-6 columns">
            @Html.Ipsum().h1().h4(wordCount: 8)
            <p class="action">
                <a href="#" class="orange large button">Buy Now</a>
            </p>
        </div>
        <div class="large-6 columns">
            <ul data-orbit>
                <li>
                    @Html.Placehold(width: 468, height: 304, text: "product slide 1", backgroundColor: "A7D5F2")
                </li>
                <li>
                    @Html.Placehold(width: 468, height: 304, text: "product slide 2", backgroundColor: "F2B807")
                </li>
                <li>
                    @Html.Placehold(width: 468, height: 304, text: "product slide 3", backgroundColor: "F23847")
                </li>
            </ul>
        </div>
    </div>
</div>
<div id="features">
    <div class="row">
        <div class="large-4 columns">@Html.Ipsum().h3() @Html.Placehold(width: 300, height: 200, text: "A")</div>
        <div class="large-4 columns">@Html.Ipsum().h3() @Html.Placehold(width: 300, height: 200, text: "B")</div>
        <div class="large-4 columns">@Html.Ipsum().h3() @Html.Placehold(width: 300, height: 200, text: "C")</div>
    </div>
</div>
<div id="benefits">
    <div class="row">
        <div class="large-8 columns">
            @Html.Ipsum().h3().p().h4().p().h4().p()
        </div>
        <div class="large-4 columns">
            @Html.Ipsum().h3().p(paragraphCount: 1, sentenceCount: 3)
            <p>
                <a href="#" class="orange button">Buy Now</a>
            </p>
        </div>
    </div>
</div>
<div id="media">
    <div class="row">
        <div class="large-12 columns">
            @Html.Ipsum().h3()
        </div>
    </div>
    <div class="row">
        <div class="large-6 columns">
            @Html.Ipsum().h4()
            @Html.Placehold(width: 468, height: 304, text: "product video")
        </div>
        <div class="large-6 columns">
            @Html.Ipsum().h4()
            @Html.Placehold(width: 468, height: 304, text: "product video")
        </div>
    </div>
</div>
﻿<div id="siteFooter">
    <div class="row">
        <div class="large-6 columns push-6">
            <h3>Contact us</h3>
            <ul class="no-bullet">
                <li><a href="#">Email</a></li>
                <li><a href="#">Phone</a></li>
                <li><a href="#">Twitter</a></li>
                <li><a href="#">FaceBook</a></li>
            </ul>
        </div>
        <div class="large-6 columns pull-6">
            <h5>Menu</h5>
            <ul class="no-bullet">
                <li><a href="#showcase">Showcase</a></li>
                <li><a href="#features">Features</a></li>
                <li><a href="#benefits">Benefits</a></li>
                <li><a href="#media">Media</a></li>
            </ul>
        </div>

    </div>
</div>
<div id="copyright" class="container">
    <div class="row">
        <div class="large-12 columns">
            <p>
                This template is a demo of Foundation using ASP.NET MVC
            </p>
        </div>
    </div>
</div>
